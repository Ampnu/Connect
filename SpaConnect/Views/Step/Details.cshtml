@*@model IEnumerable<SpaConnect.Models.Step>*@
@model SpaConnect.ViewModels.NewAssetVM
@*
    Note: I've set the model for this view to IEnumerable<Customer>.
    This is a simple interface implemented by the list class. Since
    in this view we only want to iterate over this list, and we don't
    need any of the operations in the List class (eg Add, Remove, etc),
    it's better to use the IEnumerable interface, which allows use to
    iterate over the list. If in the future, we replace the List with a
    different data structure, as long as it is enumerable, our view code
    will remain unchanged.
*@

@{
    ViewBag.Title = "INSTRUCTIONS";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int numb = 0;
}

@foreach (var val in Model.utilIDVM)
{
    <h2>OPN @val.OPN @val.opTitle</h2>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>LESSON PLAN</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model.utilIDVM)
        {
            <tr>
                <td>@val.lessonPlan</td>
            </tr>
        }
    </tbody>
</table>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>TOOLS/EQUIPMENT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model.utilIDVM)
        {
            <tr>
                <td>@val.tools</td>
            </tr>
        }
    </tbody>
</table>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>GENERAL NOTES</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model.utilIDVM)
        {
            <tr>
                <td>@val.generalNotes</td>
            </tr>
        }
    </tbody>
</table>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>STEP</th>
            <th>INSTRUCTION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model.stepIDVM)
        {
            numb = numb+1;
            <tr>
                <td>@numb</td>
                <td>@val.instructions</td>
            </tr>
        }
    </tbody>
</table>

