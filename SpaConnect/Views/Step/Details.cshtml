@*@model IEnumerable<SpaConnect.Models.Step>*@
@model SpaConnect.ViewModels.NewAssetVM

@{
    ViewBag.Title = "INSTRUCTIONS";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int numb = 0;
}

@foreach (var val in Model.utilIDVM)
{
    <h2>OPN @val.OPN @val.opTitle</h2>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>LESSON PLAN</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model.utilIDVM)
        {
        <tr>
            <td>@val.lessonPlan</td>
        </tr>
        }
    </tbody>
</table>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>TOOLS/EQUIPMENT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model.utilIDVM)
        {
        <tr>
            <td>@val.tools</td>
        </tr>
        }
    </tbody>
</table>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>GENERAL NOTES</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model.utilIDVM)
        {
        <tr>
            <td>@val.generalNotes</td>
        </tr>
        }
    </tbody>
</table>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>STEP</th>
            <th>INSTRUCTION</th>
            <th>MODIFY</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model.stepIDVM)
        {
            numb = numb+1;
        <tr>
            <td>@numb</td>
            <td class="col-lg-10">@val.instructions</td>
            <td class="col-sm-2">
                @Html.ActionLink("New", "New", "Step", new { id = val.operationID }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Edit", "Edit", "Step", new { id = val.ID }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Delete", "Result", "Operation", new { id = val.ID }, new { @class = "btn btn-primary btn-xs" })
            </td>
        </tr>
        }
    </tbody>
</table>

