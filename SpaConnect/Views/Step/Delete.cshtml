@model SpaConnect.Models.Step

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div>
        <h4>STEP: @Html.DisplayFor(model => model.instructions)</h4>
    </div>

    @using (Html.BeginForm("Remove", "Step"))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Details", new { id = Model.operationID }, new { @class = "btn btn-primary" })
        </div>

        @Html.HiddenFor(m => m.ID);
    }
</div>
