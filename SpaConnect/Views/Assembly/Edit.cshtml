@model SpaConnect.ViewModels.NewAssetVM
@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Assembly</h2>

@using (Html.BeginForm("Update", "Assembly"))
{
    <div class="form-group">
        <label for="asmbVM.assyName">Edit Name</label>
        @Html.TextAreaFor(m => m.asmbVM.assyName, new { @class = "form-control" }) @*storing input from text field into destinated va**@
    </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.asmbVM.programID, new SelectList(Model.programsIDVM, "ID", "programName"), "Select Program", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.asmbVM.ID);

    <button type="submit" class="btn btn-primary">Submit</button>
}

