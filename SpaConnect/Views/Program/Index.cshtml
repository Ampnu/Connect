@model IEnumerable<SpaConnect.Models.Program>
@{
    ViewBag.Title = "PROGRAMS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PROGRAMS</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>PROGRAM</th>
            <th>MODIFY</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model)
        {
            <tr>
                <td class="col-lg-10">@Html.ActionLink(val.programName, "Index", "Assembly", new { id = val.ID }, null)</td>
                <td class="col-lg-2">
                    @*@Html.ActionLink("New", "New", "Program", new { @class = "btn btn-primary btn-xs" })*@
                    @Html.ActionLink("Edit", "Edit", "Program", new { id = val.ID }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Delete", "Delete", "Program", new { id = val.ID }, new { @class = "btn btn-primary btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Add New Program", "New", "Program", new { @class = "btn btn-primary btn" })



