@model SpaConnect.Models.Program
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Program Name</h2>

@using (Html.BeginForm("Update", "Program"))
{
<div class="form-group">
    <label for="programName">Edit Program</label>
    @Html.TextAreaFor(m => m.programName, new { @class = "form-control" })
</div>

    @Html.HiddenFor(m => m.ID);

    <button type="submit" class="btn btn-primary">Submit</button>
}
