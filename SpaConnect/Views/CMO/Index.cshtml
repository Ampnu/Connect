@model IEnumerable<SpaConnect.ViewModels.ReleaseCCBVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PROGRAMS IN CCB</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>PROGRAM</th>
            <th>RELEASE TO PRODUCTION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var val in Model)
        {
        <tr>
            <td class="col-lg-10">OPN @val.OPNCCB @val.opTitleCCB</td>
            <td class="col-lg-2">@Html.ActionLink("RELEASE", "Release", "CMO", new { id = val.stepCCBID } , new { @class = "btn btn-primary btn-xs" })</td>
        </tr>
        }
    </tbody>
</table>
