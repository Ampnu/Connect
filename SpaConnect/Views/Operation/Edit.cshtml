@*Access to VM variables*@
@model SpaConnect.ViewModels.NewAssetVM
@{

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Operation</h2>

@using (Html.BeginForm("Update", "Operation"))
{
    <div class="form-group">
        <label for="OPN">Edit OPN</label>
        @Html.TextAreaFor(m => m.opVM.OPN, new { @class = "form-control" }) @*sets OPN number*@
    </div>

    <div class="form-group">
        <label for="opTitle">Edit OPN Title</label>
        @Html.TextAreaFor(m => m.opVM.opTitle, new { @class = "form-control" }) @*sets OPN title*@
    </div>

    <div class="form-group">
        <label for="lessonPlan">Edit Lesson Plans</label>
        @Html.TextAreaFor(m => m.opVM.lessonPlan, new { @class = "form-control" }) @*sets OPN title*@
    </div>

    <div class="form-group">
        <label for="tools">Edit Tools/Equiptment</label>
        @Html.TextAreaFor(m => m.opVM.tools, new { @class = "form-control" }) @*sets OPN title*@
    </div>

    <div class="form-group">
        <label for="generalNotes">Edit General Notes</label>
        @Html.TextAreaFor(m => m.opVM.generalNotes, new { @class = "form-control" }) @*sets OPN title*@
    </div>

    @*sets the operation to an assembly from *@
    <div class="form-group">
        @Html.DropDownListFor(m => m.opVM.asmbID, new SelectList(Model.asmbIDVM, "ID", "assyName"), "Select Assembly", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.opVM.ID);

    <button type="submit" class="btn btn-primary">Submit</button>
}
