@model SpaConnect.Models.Operation
@{
    /**/

    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Operation</h2>

@using (Html.BeginForm("Create", "Operation"))
{
    <div class="form-group">
        <label for="OPN">New OPN</label>
        @Html.TextAreaFor(m => m.OPN, new { @class = "form-control" }) @*storing input from text field into destinated variable*@
    </div>

    <div class="form-group">
        <label for="opTitle">New OPN Title</label>
        @Html.TextAreaFor(m => m.opTitle, new { @class = "form-control" }) 
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

